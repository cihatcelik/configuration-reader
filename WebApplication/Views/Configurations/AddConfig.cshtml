@model ConfigurationViewModel
@{
    ViewData["Title"] = "Anasayfa";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Konfigürasyon Kaydı Ekle</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="~/Home/Index">Anasayfa</a></li>
                    <li class="breadcrumb-item active">Konfigürasyon Kaydı Ekle</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-12 text-center">
                                <h3>Konfigürasyon Kaydı Oluşturma</h3>
                            </div>
                        </div>

                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4 offset-4">
                                <div class="row">
                                    <div class="col-12 text-center">
                                               @if (ViewBag.Message != null)
                                        {
                                        <div class="p-1 mb-2 bg-success text-white text-center">@ViewBag.Message</div>
                                        }
                                    </div>
                                </div>
                                <form method="post">
                                    <div class="row">
                                        <div class="col-12 text-center mt-1 mb-1">
                                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="input-group mb-3">
                                        <div class="input-group-append">
                                            <div class="input-group-text">
                                                <span class="fas fa-signature"></span>
                                            </div>
                                        </div>
                                        <input type="text" class="form-control" asp-for="Name" placeholder="Konfigürasyon Adı">

                                    </div>
                                    <div class="row">
                                        <div class="col-12 text-center mt-1 mb-1">
                                            @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="input-group mb-3">
                                        <div class="input-group-append">
                                            <div class="input-group-text">
                                                <span class="fas fa-signature"></span>
                                            </div>
                                        </div>
                                        <input type="text" class="form-control" asp-for="Type" placeholder="Değişken Türü">

                                    </div>
                                    <div class="row">
                                        <div class="col-12 text-center mt-1 mb-1">
                                            @Html.ValidationMessageFor(model => model.Value, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="input-group mb-3">
                                        <div class="input-group-append">
                                            <div class="input-group-text">
                                                <span class="fas fa-signature"></span>
                                            </div>
                                        </div>
                                        <input type="text" class="form-control" asp-for="Value" placeholder="Değeri">

                                    </div>
                                    <div class="row">
                                        <div class="col-12 text-center mt-1 mb-1">
                                            @Html.ValidationMessageFor(model => model.ApplicationName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="input-group mb-3">
                                        <div class="input-group-append">
                                            <div class="input-group-text">
                                                <span class="fas fa-signature"></span>
                                            </div>
                                        </div>
                                        <input type="text" class="form-control" asp-for="ApplicationName" placeholder="Uygulama Adı">

                                    </div>
                                    <div class="row">
                                        <div class="col-8">
                                            <div class="icheck-primary">
                                                <input type="checkbox" id="IsActive" asp-for="IsActive" name="IsActive">
                                                <label for="agreeTerms">
                                                    Konfigürasyon Aktif Edilsin
                                                </label>
                                            </div>
                                        </div>
                                        <!-- /.col -->
                                        <!-- /.col -->
                                    </div>
                                    <div class="row">
                                        <div class="col-4 offset-4">
                                            <button type="submit" class="btn btn-primary btn-block">Kaydet</button>
                                        </div>
                                    </div>

                                </form>
                            </div>

                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->

                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
        <!-- /.container-fluid -->
</section>
