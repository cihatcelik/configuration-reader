@using Microsoft.AspNetCore.Identity

<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <a href="~/Home" class="brand-link">
        <img src="~/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3"
             style="opacity: .8">
        <span class="brand-text font-weight-light">Config Sys</span>
    </a>
    <div class="sidebar">
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <img src="~/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
            </div>
            <div class="info">
                <a href="#" class="d-block">@GetUserNameFromEmail(Html.ViewContext.HttpContext.User.Identity.Name)</a>
            </div>
        </div>
      
            <nav class="mt-2">
                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                    <li class="nav-item ">
                        <a asp-controller="Home" asp-action="Index" class="nav-link">
                            <i class="nav-icon fas fa-home"></i>
                            <p>
                                Anasayfa
                            </p>
                        </a>
                    </li>
                    <li class="nav-header">Konfigürasyonlar</li>
                    <li class="nav-item ">
                        <a asp-controller="Configurations" asp-action="Index" class="nav-link">
                            <i class="nav-icon fas fa-cog"></i>
                            <p>
                                Konfigürasyon Kayıtları
                            </p>
                        </a>
                    </li>
                       <li class="nav-item ">
                        <a asp-controller="Configurations" asp-action="AddConfig" class="nav-link">
                            <i class="nav-icon fas fa-plus"></i>
                            <p>
                                Konfigürasyon Ekle
                            </p>
                        </a>
                    </li>

                    

                    <li class="nav-header">Hesap</li>
                
                    <li class="nav-item ">
                        <a asp-controller="Account" asp-action="Logout" class="nav-link">
                            <i class="nav-icon fas fa-power-off"></i>
                            <p>
                                Çıkış Yap
                            </p>
                        </a>
                    </li>
                </ul>
            </nav>
        
       

    </div>
</aside>

@functions {
    public string GetUserNameFromEmail(string x)
    {
        return x.Substring(0, x.IndexOf('@'));
        //return "";

    }
}